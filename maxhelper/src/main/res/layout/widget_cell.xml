<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/standard_distance"
    android:paddingRight="@dimen/small_distance">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/cell_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/small_distance"/>

    <ImageView
        android:id="@+id/cell_image"
        android:layout_width="@dimen/cell_image_size"
        android:layout_height="@dimen/cell_image_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/small_distance"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/cell_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/standard_text_size"/>

        <TextView
            android:id="@+id/cell_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="@dimen/small_text_size"/>
    </LinearLayout>
</RelativeLayout>